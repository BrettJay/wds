---

<Layout title="Schedule">
	<main class="p-8">
		<h1 class="text-2xl font-bold mb-8">Schedule</h1>

		<h2 class="text-xl font-bold mb-4">Day One</h2>

		<div class="border-l-2 border-slate-200 space-y-6">
			{day_one.map((talk) => (
				<div class="px-4 relative">
					<p class="text-sm text-slate-700">{talk.time}</p>
					<h2 class="text-lg font-bold leading-tight">{talk.title}</h2>
					<p>{talk.speaker}, {talk.room}</p>
				</div>
			))}

		</div>

		<h2 class="text-xl font-bold mb-4 mt-8">Day Two</h2>
		<div class="border-l-2 border-slate-200 space-y-6">
			{day_two.map((talk) => (
				<div class="px-4 relative">
					<p class="text-sm text-slate-700">{talk.time}</p>
					<h2 class="text-lg font-bold leading-tight">{talk.title}</h2>
					<p>{talk.speaker}, {talk.room}</p>
				</div>
			))}
	</main>
	<Navigation active='schedule' />
</Layout>

